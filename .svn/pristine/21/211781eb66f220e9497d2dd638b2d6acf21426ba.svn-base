<!--
程序名：角色授权管理
功能：管理网站的所有用户角色
-->
<template>
  <section>
    <!--工具条-->
    <el-col
      :span="24"
      class="el-table_headtoolbar"
      style="padding-bottom: 15px;"
    >
      <el-col :span="4" :offset="20">
        <el-button plain type="primary" icon="el-icon-plus" @click="addRoles('添加角色授权信息')"
          >添加角色授权</el-button
        >
      </el-col>
    </el-col>
    <el-table
      :data="roleList"
      :default-sort="{ prop: 'date', order: 'descending' }"
      :height="screenHeight"
      border
    >
      <el-table-column prop="sn" sortable label="授权信息标识" width="250">
      </el-table-column>
      <el-table-column prop="fullName" sortable label="用户名称" width="200">
      </el-table-column>
      <el-table-column prop="name" label="角色名称" width="150">
      </el-table-column>
      <el-table-column prop="setType" label="授权类型" width="150" >
        <span v-if="profile.setType==0">用户</span>
        <span v-else-if="profile.setType==1">职位</span>
        <span v-else>其他</span>
      </el-table-column>
      <el-table-column prop="remarks" label="备注"> </el-table-column>
      <el-table-column
        prop="enabledMark"
        label="启用状态"
        :formatter="enabledMarkFormat"
        width="100"
      >
      </el-table-column>
      <el-table-column align="right" fixed="right" width="200">
        <template slot="header" slot-scope="scope">
          <el-input
            v-model="searchStr"
            size="mini"
            placeholder="输入关键字搜索"
            :input="searchRole(scope)"
          />
        </template>
        <template slot-scope="scope">
          <el-button size="mini" @click="updateRoles('编辑角色授权信息',scope.row)"
            >编辑</el-button
          >
          <el-button
            size="mini"
            type="danger"
            @click="handleDelete(scope.$index, scope.row)"
            >删除</el-button
          >
        </template>
      </el-table-column>
    </el-table>
    <!--翻页栏-->
    <el-col :span="24" class="el-table_footertoolbar">
      <el-pagination
        :hide-on-single-page="false"
        background
        layout="total, sizes, prev, pager, next"
        :page-sizes="[10, 20, 50, 100]"
        :total="total"
        style="float:right;"
        @size-change="handleSizeChange"
        @current-change="handleCurrentChange"
      >
      </el-pagination>
    </el-col>
    <!--保存用户授权信息界面-->
    <el-dialog :title="fromTitle" :visible.sync="formVisible">
      <el-form
        :model="userRole"
        label-width="80px"
        :rules="profileRules"
        ref="userRole"
      >
        <el-form-item label="用户名称:" prop="username">
          <el-select v-model="userRole.objectSN" placeholder="请选择" @change="selectGetObjectSN($event)" style="width:700px">
            <el-option
              v-for="item in users"
              :key="item.sn"
              :label="item.fullName"
              :value="item.sn">
            </el-option>
          </el-select>
        </el-form-item>
        <el-form-item label="用户角色:" prop="userrole">
          <el-select v-model="userRole.roleSN" placeholder="请选择" @change="selectGetRoleSN($event)" style="width:700px">
            <el-option
              v-for="item in roles"
              :key="item.sn"
              :label="item.name"
              :value="item.sn">
            </el-option>
          </el-select>
        </el-form-item>
        <el-form-item label="备注:" prop="remarks">
          <el-input v-model="userRole.remarks" placeholder="请输入备注" style="width:700px"></el-input>
        </el-form-item>
      </el-form>
      <div slot="footer" class="dialog-footer">
        <el-button @click.native="formVisible = false">取消</el-button>
        <el-button
          type="primary"
          @click.native="formSubmit('userRole')"
          :loading="formLoading"
          >提交</el-button
        >
      </div>
    </el-dialog>
    <!--修改用户授权信息界面-->
    <el-dialog :title="updatefromTitle" :visible.sync="updateFrom">
      <el-form
        :model="userRole"
        label-width="80px"
        :rules="profileRules"
        ref="userRole"
      >
        <el-form-item label="用户名称:" prop="username">
          <el-select v-model="userRole.fullName" placeholder="请选择" disabled  @change="selectGetObjectSN($event)" style="width:700px">
            <el-option
              v-for="item in users"
              :key="item.sn"
              :label="item.fullName"
              :value="item.sn">
            </el-option>
          </el-select>
        </el-form-item>
        <el-form-item label="用户角色:" prop="userrole">
          <el-select v-model="userRole.roleSN" placeholder="请选择" @change="selectGetRoleSN($event)" style="width:700px">
            <el-option
              v-for="item in roles"
              :key="item.sn"
              :label="item.name"
              :value="item.sn">
            </el-option>
          </el-select>
        </el-form-item>
        <el-form-item label="备注:" prop="remarks">
          <el-input v-model="userRole.remarks" placeholder="请输入备注" style="width:700px"></el-input>
        </el-form-item>
      </el-form>
      <div slot="footer" class="dialog-footer">
        <el-button @click.native="updateFrom = false">取消</el-button>
        <el-button
          type="primary"
          @click.native="formSubmit('userRole')"
          :loading="formLoading"
          >提交</el-button
        >
      </div>
    </el-dialog>
    
  </section>
</template>

<script>
export default {
  data() {
    return {
      roleList: [], //角色信息
      searchStr: "", //搜索条件
      screenHeight: window.innerHeight - 220, //当前窗体高度-导航栏高度
      currentPage: 1,
      pagesize: 10,
      fTitle:"",
      total: 0,
      //查询信息使用
      profile: {
        name: "", //角色名称
        setType: "", //授权类型 0 用户/1职位/2其他
        remarks:"",//备注
        sn:"",//授权信息标识
        objectSN:"",//用户/职位标识
        fullName:""
      },
      //保存对象使用
      userRole:{
        sn:"",
        objectSN:"",//用户/职位标识
        roleName:"",//角色名称
        roleSN:"",//角色标识
        remarks:"",//备注
        fullName:""
      },
      //查询角色信息下拉列表对象
      roles:{
        sn:"",
        name:""
      },
      //查询用户信息下拉列表对象
      users:{
        sn:"",
        fullName:""
      },
      profileRules: {
        //表单用户信息的格式显示
        
      },
      formVisible: false, //表单的打开和关闭的控制
      formLoading: false, //表单
      updateFrom:false,
    };
  },
  components: {},
  methods: {
    selectGetObjectSN(val){
      var obj = {}
      obj = this.selectList.find(function(item){
        return item.sn === val
      })
      this.userRole.objectSN=val;
    },
    selectGetRoleSN(val){
      var obj = {}
      obj = this.selectList.find(function(item){
        return item.sn === val
      })
      this.userRole.roleSN=val;
    },
    //删除角色信息
    handleDelete(index, row) {
        this.$confirm("确认要删除此角色信息吗？", "提示", {}).then(() => {
            this.$axios.delete(`/UserRoles/${row.sn}`).then(res => {
                if (res.data.code == 200) {
                    this.$message({
                        type: "success",
                        message: "删除成功!"
                    });
                    this.loading = false;
                    this.getAllRoleList();
                    this.defaultActive = 1;
                } else {
                    this.$message({
                        type: "error",
                        message: "删除失败"
                    });
                }
            });
        })
    },
    //搜索
    //当输入框内容发生改变时或者失去输入框焦点时触发
    searchRole(scope) {
      console.log(this.searchStr + "搜索");
      this.getAllRoleList();
    },
    //获取角色授权信息列表
    getAllRoleList() {
      this.$axios.get("/UserRoles/queryGridJson").then(res => {
        this.roleList = res.data.data.rows;
      });
      this.$axios.get("/Role/findAll").then(res => {
        this.roles = res.data.data;
      });
      this.$axios.get("/user/findAll").then(res => {
        this.users = res.data.data;
      });
    },
    //数据格式化
    enabledMarkFormat(row, column) {
      if (row.enabledMark === true) {
        return "启用";
      } else {
        return "未启用";
      }
    },
    //初始页page、初始每页数据数pagesize和数据data
    handleSizeChange(size) {
      console.log(size);
      this.pagesize = size;
    },
    handleCurrentChange(val) {
      this.currentPage = val;
    },
    //保存角色信息
    formSubmit() {
      this.$refs.userRole.validate(valid => {
        console.log(valid);
        if (valid) {
          this.$confirm("确认提交吗？", "提示", {}).then(() => {
            this.formLoading = true;
            this.$axios.post("/UserRoles/saveUserRoles",this.userRole).then(res => {
              debugger;
              this.formLoading = false;
              if (res.data.code == 200) {
                this.$message({
                  message: "提交成功",
                  type: "success"
                });
                this.$refs["userRole"].resetFields();
                this.getAllRoleList();
              } else {
                this.$message({
                  type: "error",
                  message: "提交失败!"
                });
              }
              this.formVisible = false;
              this.updateFrom=false;
            });
          });
        }
      });
    },
    //打开添加角色表单
    addRoles(fTitle) {
      this.fromTitle = fTitle;
      this.userRole.sn="";
      this.userRole.objectSN="";
      this.userRole.roleSN="";
      this.userRole.remarks="";
      this.formVisible = true;
    },
    //打开编辑角色表单
    updateRoles(fTitle,row) {
      this.updatefromTitle = fTitle;
      this.userRole.sn=row.sn;
      this.userRole.fullName=row.fullName;
      this.userRole.objectSN=row.objectSN;
      this.userRole.roleSN=row.name;
      this.userRole.remarks=row.remarks;
      this.updateFrom = true;
    }
  },
  mounted() {
    //监听当前窗口高度
    window.onresize = () => {
      return (() => {
        this.screenHeight = window.innerHeight - 220;
      })();
    };
    this.getAllRoleList();
  }
};
</script>
